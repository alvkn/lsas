<Window x:Class="LightSteamAccountSwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Name="RootWindow"
        Title="Light Steam Account Switcher" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#171A21" Padding="10">
            <Grid>
                <TextBlock Text="STEAM ACCOUNTS" Foreground="White" FontWeight="Bold" FontSize="16"
                           VerticalAlignment="Center" />
                <Button Content="+ Add Account" Command="{Binding AddAccountCommand}"
                        HorizontalAlignment="Right" VerticalAlignment="Center"
                        Background="#2A475E" Foreground="White" BorderThickness="0" Padding="10,5" />
            </Grid>
        </Border>

        <!-- Account List -->
        <ListView Grid.Row="1" ItemsSource="{Binding Accounts}" SelectedItem="{Binding SelectedAccount}"
                  Background="#1B2838" BorderThickness="0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Background" Value="Transparent" />
                    <!-- We use Tag to pass the Window's DataContext (ViewModel) to the ContextMenu -->
                    <Setter Property="Tag" Value="{Binding DataContext, ElementName=RootWindow}" />
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu
                                DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                                <MenuItem Header="Switch"
                                          Command="{Binding SwitchAccountCommand}"
                                          CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                          FontWeight="Bold" />
                                <MenuItem Header="Switch as...">
                                    <MenuItem Header="Online"
                                              Command="{Binding SwitchOnlineCommand}"
                                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                    <MenuItem Header="Invisible"
                                              Command="{Binding SwitchInvisibleCommand}"
                                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                    <MenuItem Header="Offline"
                                              Command="{Binding SwitchOfflineCommand}"
                                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                </MenuItem>
                                <Separator />
                                <MenuItem Header="Create Shortcut"
                                          Command="{Binding CreateShortcutCommand}"
                                          CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                <MenuItem Header="Open Game Data Folder"
                                          Command="{Binding OpenGameDataCommand}"
                                          CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                <Separator />
                                <MenuItem Header="Copy SteamID">
                                    <MenuItem Header="SteamID64 (Decimal)"
                                              Command="{Binding CopySteamId64Command}"
                                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                    <MenuItem Header="SteamID3 ( [U:1:...] )"
                                              Command="{Binding CopySteamId3Command}"
                                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                    <MenuItem Header="SteamID ( STEAM_0:X:Y )"
                                              Command="{Binding CopySteamIdLegacyCommand}"
                                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                </MenuItem>
                                <MenuItem Header="Copy Profile Link"
                                          Command="{Binding CopyProfileLinkCommand}"
                                          CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                <Separator />
                                <MenuItem Header="Forget Account"
                                          Command="{Binding ForgetAccountCommand}"
                                          CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border x:Name="Border" Background="{TemplateBinding Background}" Padding="5"
                                        Margin="2" CornerRadius="3">
                                    <ContentPresenter />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#2A475E" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#66C0F4" />
                                    </Trigger>
                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#A3CF06" />
                                        <Setter TargetName="Border" Property="BorderThickness" Value="2" />
                                    </DataTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Avatar -->
                        <Image Grid.Column="0" Source="{Binding AvatarUrl}" Width="40" Height="40" Margin="0,0,10,0" />

                        <!-- Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding PersonaName}" Foreground="White" FontWeight="Bold" FontSize="14" />
                            <TextBlock Text="{Binding AccountName}" Foreground="#8F98A0" FontSize="12" />

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="VAC BANNED" Foreground="#FF4949" FontSize="10" Margin="0,2,5,0"
                                           Visibility="{Binding IsVacBanned, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <TextBlock Text="LIMITED" Foreground="#FF4949" FontSize="10" Margin="0,2,0,0"
                                           Visibility="{Binding IsLimited, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>
                        </StackPanel>

                        <!-- Switch Button -->
                        <Button Grid.Column="2" Content="Switch"
                                Command="{Binding DataContext.SwitchAccountCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Background="#66C0F4" Foreground="Black" Padding="10,5" BorderThickness="0"
                                VerticalAlignment="Center" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#171A21" Padding="5">
            <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="10" />
        </Border>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" Background="#80000000"
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="Processing..." Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="20" />
        </Grid>

    </Grid>
</Window>